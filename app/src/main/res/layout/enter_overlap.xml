<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog">

    <EditText
        android:id="@+id/editTextDialogXOverlap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="number"
        android:hint="X Overlap" />

    <EditText
        android:id="@+id/editTextDialogYOverlap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextDialogXOverlap"
        android:layout_below="@+id/editTextDialogXOverlap"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Y Overlap" />

    <ImageButton
        android:id="@+id/imageButtonOverlapDialogOk"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView14"
        android:layout_below="@+id/editTextDialogYOverlap"
        android:background="@null"
        android:padding="2dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/dialogok" />

    <ImageButton
        android:id="@+id/imageButtonOverlapDialogCancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextDialogYOverlap"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/imageButtonOverlapDialogOk"        android:background="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/dialogcancel" />

</RelativeLayout>